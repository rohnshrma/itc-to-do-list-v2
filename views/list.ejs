<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>list of <%= date %>
    </title>


    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- bs css -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">


    <!-- custom css -->
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <div class="main">

        <div class="header box text-center">
            <h1>To Do List</h1>
        </div>

        <div class="new-item-form box">
            <form action="/" method="post">
                <div class="form-group">
                    <input type="text" name="newItem" class="form-control" placeholder="Enter item name">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Add +</button>
            </form>
        </div>


        <%if(typeof data==typeof []){ %>
            <%data.forEach(item=>{ %>
                <div class="box list-item ">
                    <div class="list-item-name">
                        <h4><%= item.name %></h4>
                    </div>
                    <a href="/delete/<%= item._id %>"><i class="fa-solid fa-trash"></i></a>
                </div>
            <% })%>
        <% }else{ %>
            <div class="box">
                <h4>No Items Found</h4>
            </div>
        <% }%>


    </div>

</body>

</html>